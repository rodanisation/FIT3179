{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": " ",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/rodankaka/FIT3179/master-branch/Severity%20Type.csv"
  },
  "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
  "encoding": {
    "x": {
      "timeUnit": "month",
      "field": "Accident Date",
      "title": "Month",
      "type": "ordinal"
    },
    "y": {
      "aggregate": "count",
      "title": "Number of Accidents",
      "scale": {"domain": [0, 4100]},
      "axis": {"grid": false}
    },


 "tooltip": [

   {"field":"Severity", "type": "nominal"},
   {"field": "Accident Date", "type": "temporal"},
   {"field": "__count", "type": "quantitative", "title": "Number of Accidents"}
 ],


    "color": {"field": "Severity", "title": "Severity Type"}
  },
  "config": {}
}
